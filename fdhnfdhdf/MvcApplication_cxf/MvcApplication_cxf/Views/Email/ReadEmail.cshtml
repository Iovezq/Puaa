                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                             @{
                                if (readed != null)
                                {

                                    foreach (var item in readed)
                                    {
                                        if (item.Title == "闲聊")
                                        {
                                        <tr>
                                    <td>@item.Title</td>
                                    <td><a href="#" class="selemail"  getallcontent="@item.Content">
                                        @{
                                            var mes = "";
                                            if (item.Content.Length > 6)
                                            {
                                                mes = item.Content.Substring(0, 6);
                                            }
                                            else
                                            {
                                                mes = item.Content;
                                            }
                                        }
                                        @mes
                                    </a></td>

                                    <td>@item.SendTime</td>
                                      @{
                                            var HaverName = "";
                                            var SenderName="";
                                            Dal.EmployeeDal dal = new Dal.EmployeeDal();
                                            Model.EmployeeInfo emh = dal.GetEmployeerByID(item.HaverID);
                                            Model.EmployeeInfo ems = dal.GetEmployeerByID(item.SenderID);
                                            HaverName = emh.LoginName;
                                            SenderName=ems.LoginName;
                                                }
                                            <td><a href="#" class="label label-info"><i class="icon-user"></i>@SenderName</a></td>
                                           
