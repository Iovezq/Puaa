@{
    ViewBag.Title = "AllCalendars";
    Layout = "~/Views/_MainLayoutPage.cshtml";
    ViewBag.subTitle = "日程管理";
}
@section navgation
{
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="#">日程管理</a>
            <i class="icon-angle-right"></i>
        </li>
        <li>
            <a href="#">查看日程</a>
        </li>

    </ul>

}

<script>

    $(function () {

        //$("#left_menu > li").eq(11).addClass("active").siblings().removeClass("active");
        //$("#left_menu > li").eq(11).find("ul li").eq(0).addClass("active");

        $(".员工日程管理").addClass("active").siblings().removeClass("active");
        $(".查看日程").addClass("active");

    });
</script>

<h2>员工日程</h2>

@{
    List<Model.Calendar> Calendars = (List<Model.Calendar>)ViewBag.Calendars;
    List<Model.EmployeeInfo> emlist = (List<Model.EmployeeInfo>)ViewBag.emlist;
    
    
}


<div class="row-fluid">
    <div class="span12">
        <ul class="timeline">

            @{
                
                foreach (var item in Calendars)
                {
                <li class="timeline-blue">
                    <div class="timeline-time">
                        <span class="date">@item.ActionTime</span>
                        <span class="time" style="font-size: 10px;">@item.ScheduleDate</span>
                    </div>
                    <div class="timeline-icon"><i class="icon-time"></i></div>
                    <div class="timeline-body">

                        @{
                    var name = "";
                    foreach (var it in emlist.Where(a => a.ID == item.EmployeeID))
                    {
                        name = it.LoginName;
                    }
                        }
                        <h4>@name 的日程安排 </h4>
                        <div class="timeline-content">
                            @item.Schedule
                        </div>
                    </div>
                </li>
                }
            }

        </ul>
    </div>
</div>
